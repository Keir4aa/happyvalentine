<script>
const body = document.body;
const emojis = ['‚ù§Ô∏è','üíñ','‚ú®','üå∏','üíï'];

for (let i = 0; i < 30; i++) {
  const float = document.createElement('div');
  float.className = 'floating';
  float.innerText = emojis[Math.floor(Math.random() * emojis.length)];
  float.style.left = Math.random() * 100 + 'vw';
  float.style.animationDuration = 3 + Math.random() * 3 + 's';
  float.style.fontSize = (0.8 + Math.random() * 1.2) + 'rem';
  body.appendChild(float);
}

const gift = document.getElementById('gift');
const counter = document.getElementById('counter');
const message = document.getElementById('message');

let tapCount = 0;
const maxTaps = 5;

gift.addEventListener('click', (e) => {
  tapCount++;
  counter.innerText = `${tapCount} / ${maxTaps} taps`;

  gift.classList.add('tapped');
  setTimeout(() => gift.classList.remove('tapped'), 200);

  for (let i = 0; i < 5; i++) {
    createBurst(e.clientX, e.clientY);
  }

  if (tapCount === maxTaps) {
    explodeGift();
  }
});

function createBurst(x, y) {
  const burst = document.createElement('div');
  burst.className = 'burst';
  burst.innerText = emojis[Math.floor(Math.random() * emojis.length)];
  burst.style.left = x + 'px';
  burst.style.top = y + 'px';
  burst.style.setProperty('--x', `${(Math.random() - 0.5) * 200}px`);
  burst.style.setProperty('--y', `${(Math.random() - 0.5) * 200}px`);
  document.body.appendChild(burst);
  setTimeout(() => burst.remove(), 1000);
}

function explodeGift() {
  const rect = gift.getBoundingClientRect();
  const centerX = rect.left + rect.width / 2;
  const centerY = rect.top + rect.height / 2;

  gift.style.display = 'none';
  counter.style.display = 'none';

  for (let i = 0; i < 30; i++) {
    createBurst(centerX, centerY);
  }

  spreadPhoto('p1', centerX, centerY, -220, -180);
  spreadPhoto('p2', centerX, centerY, 200, -150);
  spreadPhoto('p3', centerX, centerY, -200, 160);
  spreadPhoto('p4', centerX, centerY, 220, 180);

  message.style.display = 'block';
  message.innerHTML = `
    üíå <b>HAIHAIIIII!</b><br><br>
        Happy Valentine Day, cayang acuuuu cewe acuu imup acuuuu!!<br><br>
        Today is special because of you. Thank you for being there, so patient with me, and always encouraging and caring, even when I can be annoying.<br><br>
        I know I'm not perfect, I still have many shortcomings, but you're still there and continue to support me. That's something I never take for granted.<br><br>
        You're not just a girlfriend, but also a friend, a listener, and someone who makes my days feel lighter. I'm so grateful to be with you.<br><br>
        I hope you're always happy, and know that there's someone who always loves and cares for you: me.<br><br>
        Once again, Happy Valentine Day my sweetie pieee.<br><br>
      `;    
}

function spreadPhoto(id, x, y, offsetX, offsetY) {
  const photo = document.getElementById(id);
  photo.style.left = (x - 55) + 'px';
  photo.style.top = (y - 55) + 'px';

  setTimeout(() => {
    photo.classList.add('show');
    photo.style.left = (x + offsetX) + 'px';
    photo.style.top = (y + offsetY) + 'px';
    photo.style.animation = 'gentleFloat 4s ease-in-out infinite';
  }, 100);
}

/* ===== DRAG FOTO FEATURE ===== */
let activePhoto = null;
let offsetX = 0;
let offsetY = 0;

document.querySelectorAll('.photo').forEach(photo => {

  photo.addEventListener('pointerdown', (e) => {
    activePhoto = photo;
    offsetX = e.clientX - photo.offsetLeft;
    offsetY = e.clientY - photo.offsetTop;
    photo.style.animation = "none";
    photo.setPointerCapture(e.pointerId);
  });

  photo.addEventListener('pointermove', (e) => {
    if (!activePhoto) return;
    photo.style.left = (e.clientX - offsetX) + "px";
    photo.style.top = (e.clientY - offsetY) + "px";
  });

  photo.addEventListener('pointerup', (e) => {
    if (!activePhoto) return;
    photo.releasePointerCapture(e.pointerId);
    photo.style.animation = "gentleFloat 4s ease-in-out infinite";
    activePhoto = null;
  });

});
</script>

